@{
    Layout = "_Layout-Login";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">

        <div class="card-Login" style="background-color: #2f2f2f; border-radius: 20px;">
            <div class="card-body">
                <div class="app-brand justify-content-center" style="margin-bottom: 0.5rem;">
                    <div>
                        <iframe src="https://lottie.host/?file=bd975756-b739-4801-8197-0970ce0cda78/QBZOrlYyAO.json"></iframe>
                    </div>
                </div>

                <h4 style="text-align: center;" class="mb-2">Bem-vindo ao Saúde++ 👋</h4>
                <p style="text-align: center; color:#FFAB00;" class="mb-4">Para ingressar na fila de antendimento, selecione abaixo a opção adequada e para gerar sua senha de atendimento.</p>
                <form id="formAuthentication" class="mb-3" action="/cdsObras/Login/Login" method="POST">
                    
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite seu Nome" autofocus="">
                    </div>
                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">CPF</label>
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="text" class="form-control" maxlength="14" placeholder="Ex.: 000.000.000-00" id="cpfInput">
                        </div>

                    <div class="mb-3">
                    </div>
                    <div class="row mb-3" style="justify-content: center;">
                        <button class="btn btn-outline d-grid w-60" style="" href="/cdsObras/Login/Home" asp-controller="TelaPrincipal" asp-action="Index" type="submit">Entrar</button>
                    </div>
                </form>
                <div class="container">
                    <div style="justify-content:space-between; display:flex">
                        <div class=" text-sm" align-items:="" center;="" display:="" flex;"="">
                            © 2023
                        </div>
                        <div class=" text-right text-end"><i class='bx bx-buildings' style="color:white;"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function validarCPF(cpf) {
            // Remove caracteres não numéricos
            cpf = cpf.replace(/[^\d]/g, '');

            // Verifica se o CPF tem 11 dígitos numéricos
            return cpf.length === 11;
        }

        const cpfInput = document.getElementById("cpfInput");
        const cpfValidationMessage = document.getElementById("cpfValidationMessage");

        cpfInput.addEventListener("input", function () {
            const cpf = cpfInput.value;
            if (validarCPF(cpf)) {
                cpfInput.classList.remove("is-invalid");
                cpfInput.classList.add("is-valid");
            } else {
                cpfInput.classList.remove("is-valid");
                cpfInput.classList.add("is-invalid");
            }
        });
</script>